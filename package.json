{
  "name": "eslint-config-radiofrance",
  "version": "4.0.0",
  "description": "ESLint shareable config for Radio France",
  "license": "CECILL-B",
  "repository": "radiofrance/eslint-config-radiofrance",
  "author": {
    "name": "Radio France",
    "email": "opensource@radiofrance.com",
    "url": "https://www.radiofrance.fr"
  },
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "lint": "eslint .",
    "test": "ava"
  },
  "files": [
    "index.js"
  ],
  "keywords": [
    "❤️",
    "space",
    "spaces",
    "eslintconfig",
    "xo",
    "code",
    "quality",
    "style",
    "lint",
    "linter",
    "jscs",
    "jshint",
    "jslint",
    "eslint",
    "validate",
    "code style",
    "standard",
    "strict",
    "check",
    "checker",
    "verify",
    "enforce",
    "hint",
    "simple",
    "sindre"
  ],
  "dependencies": {
    "eslint-config-xo": "^0.44.0",
    "eslint-plugin-package-json": "^0.10.4",
    "eslint-plugin-promise": "^6.0.0",
    "jsonc-eslint-parser": "^2.4.0"
  },
  "devDependencies": {
    "ava": "^6.1.2",
    "eslint": "^8.52.0"
  },
  "peerDependencies": {
    "eslint": ">=8.0.0"
  },
  "eslintConfig": {
    "extends": "xo",
    "rules": {
      "indent": [
        2,
        2,
        {
          "SwitchCase": 1
        }
      ],
      "capitalized-comments": "off",
      "camelcase": "warn",
      "no-console": "error",
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "next"
        }
      ],
      "prefer-promise-reject-errors": "warn"
    }
  }
}
